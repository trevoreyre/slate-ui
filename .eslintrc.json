{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:storybook/recommended"
  ],
  "parser": "babel-eslint",
  "globals": {
    "chai": "readonly"
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "mocha": true
  },
  "rules": {
    "no-unexpected-multiline": "off"
  },
  "overrides": [
    {
      "files": [
        "rollup.config.js"
      ],
      "env": {
        "node": true
      }
    }
  ]
}
